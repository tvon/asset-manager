
<table class="assets">
  <tr>
    <th>File</th>
    <th>Description</th>
    <th>&nbsp;</th>
    <th>&nbsp;</th>
  </tr>

<% for asset in assets %>
  <tr class="<%= cycle('odd', 'even') %>">
    <td class="asset-title"><%= link_to asset.attachment.filename, asset %></td>
    <td class="asset-description"><%= truncate asset.description, 30, "&#8230; (more)" %></td>
    <td><%= link_to 'Edit', edit_asset_path(asset) %></td>
    <td><%= link_to 'Destroy', asset, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

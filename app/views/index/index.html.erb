<% if logged_in? -%>

  <% if !@public.empty? %>
  
    <h3>Public Assets</h3>

    <%= render :partial => 'assets/listing', :locals => {:assets => @public} -%>

  <% end %>
  
  <% if !@private.empty? %>
    <h3>Private Assets</h3>

    <%= render :partial => 'assets/listing', :locals => {:assets => @private} -%>
        
  <% end%>

<% else -%>

<div id="login">
  <%= render :partial => 'sessions/form' %>
</div>

<% end %>
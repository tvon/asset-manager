  <%= stylesheet_link_tag 'base.css' %>
  <%= stylesheet_link_tag 'mimetypes.css' %>
</head>
<body>

  <div id="page" class="grid">
    
    <div id="header">
        <%= render :partial => 'users/user_bar' %>
      <h1><a href="/">Asset Manager</a></h1>
      <!--
      <ul class="tabs">
        <li><%= link_to 'List', assets_path %></li>
        <li><%= link_to 'New Asset', new_asset_path %>
        </li>
      </ul>
    -->
    
    </div>
    <div id="body">
  
      <% if flash[:notice] %>
        <p class="notice"><%= flash[:notice] %></p>
      <% end %>
      
      <%= yield  %>
    
    </div>
    <div id="footer">
      
    </div>
  </div>
</body>
</html>

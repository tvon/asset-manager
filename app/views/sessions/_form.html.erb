<% form_tag session_path, :id => 'login-form', :class => 'hform' do -%>

  <p>
    <%= label_tag 'login' %>
    <%= text_field_tag 'login', @login %>
  </p>

  <p>
    <%= label_tag 'password' %>
    <%= password_field_tag 'password', nil %>
  </p>

  <p class="checkbox">
    <%= label_tag 'remember_me', 'Remember me' %>
    <%= check_box_tag 'remember_me', '1', @remember_me %>
  </p>

  <p class="controls">
    <%= submit_tag 'Log in' %>
  </p>
  
<% end -%>
